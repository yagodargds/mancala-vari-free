<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rf.yagodar.manqala"
    android:versionCode="1"
    android:versionName="@string/version_name" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <supports-screens 
        android:largeScreens="true"
        android:xlargeScreens="true" />
    
    <uses-configuration 
         android:reqTouchScreen="finger" />
    
    <uses-configuration 
         android:reqTouchScreen="stylus" />
    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/ManqalaVariAppTheme"
        android:allowBackup="false" >        
        <activity 
            android:name=".activity.ManqalaMainMenuActivity" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".activity.ManqalaCombatVariActivity" 
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaCompanyWellcomeActivity" 
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaCompanyActivity" 
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaMultiplayerActivity" 
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaTutorialActivity" 
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaCreditsActivity"
            android:screenOrientation="landscape"           
            />
        <activity 
            android:name=".activity.ManqalaOptionsActivity" 
            android:screenOrientation="landscape"           
            />
    </application>
</manifest>